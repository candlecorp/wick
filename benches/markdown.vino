---
version: 0
host:
  allow_latest: true
network:
  providers:
    - namespace: markdown
      kind: WaPC
      reference: vinoreg.azurecr.io/vino/markdown:latest
  schematics:
    - name: render
      providers:
        - markdown
      instances:
        render: markdown::render
      connections:
        - <> => render[markdown]
        - render[html] => <>
